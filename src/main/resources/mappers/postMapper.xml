<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.memo.post.dao.PostDAO">
	<select id="selectPostList" resultType="com.memo.post.model.Post" parameterType="map">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		<if test="direction == null">
		ORDER BY `id` DESC
		</if>
		<if test="direction == 'prev'">
		<!-- <![CDATA[ AND `id` > #{standardId} ]]> -->
			AND `id` &gt; #{standardId}
		ORDER BY `id`
		</if>
		<if test="direction == 'next'">
			AND `id` &lt; #{standardId}
		ORDER BY `id` DESC
		</if>
		LIMIT ${limit}
	</select>
	
	<select id="selectIdByUserIdAndSort" parameterType="map" resultType="int">
		SELECT
			`id`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` ${sort}
		LIMIT 1
	</select>
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{subject}
			,#{content}
			,#{imagePath}
			,NOW()
			,NOW()
		)
	</insert>
	
	<select id="selectPost" resultType="com.memo.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}
	</select>
	
	<update id="updatePost" parameterType="map">
		UPDATE `post`
		SET
			`subject` = #{subject}
			,`content` = #{content}
			,`updatedAt` = NOW()
			<!-- imagePath가 있을 때에만 수정한다. -->
			<if test="imagePath != null">
			,`imagePath` = #{imagePath}
			</if>
		WHERE
			`id` = #{postId}
	</update>
	
	<delete id="deletePost">
		DELETE
		FROM
			`post`
		WHERE
			`id` = #{postId}
	</delete>
</mapper>